// ---------------- generator & datasource ----------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UF {
  AC 
  AL 
  AP 
  AM 
  BA 
  CE 
  DF 
  ES 
  GO 
  MA 
  MT 
  MS 
  MG 
  PA 
  PB 
  PR 
  PE 
  PI 
  RJ 
  RN 
  RS 
  RO 
  RR 
  SC 
  SP 
  SE 
  TO
